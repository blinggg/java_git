package ex04;

import java.util.Scanner;

public class Sample {

	public static void main(String[] args) {
		//촍점 狗췒핌
		Scanner s= new Scanner(System.in);
		boolean run=true;
		
		String[] no=new String[100];		//썯촥좾탺 좭 100썁
		String[] name=new String[100];		//찣쐏촸 좭 100썁	
		int[] balance=new int[100]; 		//썯촥첖쮕
		int count=0;						//썯촥썇쩠
		
		while(run){
			System.out.println("------------------------------");
			System.out.println("1.썯촥쨬|2.썯촥점픞3.찣쐏|4.歐⑹5.쭹");
			System.out.println("------------------------------");
			
			System.out.println("쨤콲>");
			int menu=s.nextInt();
			
			switch(menu) {
			case 1:
				System.out.println("------------------------------");
				System.out.println("썯촥쨬");
				System.out.println("------------------------------");
				
				System.out.println("썯촥좾탺:");
				no[count]=s.next();
				
				System.out.println("썯촥촸:");
				name[count]=s.next();
				
				System.out.println("퉘舅쐏쮕:");
				balance[count]=s.nextInt();
				
				System.out.println("써쎀:썯촥쌰 쨬왆쮴챲핎.");
				count=count+1;
				
				break;
				
			case 2: //썯촥점
				System.out.println("------------------------------");
				System.out.println("썯촥점");
				System.out.println("------------------------------");
				
				for(int i=0; i<=count-1; i++ ) {
					System.out.println(no[i]+"\t"+name[i]+"\t"+balance[i]+"\t");
				}
				System.out.println();
				break;
				
			case 3:
			case 4:
			case 5:
				
			}//switch
		}// while
	}//main
}//class

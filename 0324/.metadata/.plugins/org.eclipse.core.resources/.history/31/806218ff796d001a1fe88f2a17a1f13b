package ex04;

public class Sample {

	public static void main(String[] args) 
			throws Exception{ // 오류를 날려버려
		
		// switch문
		int num=2;
		num=System.in.read(); // 키보드에 입력해주세요.
		
		switch(num) {
		case 1 :
			System.out.println("1번이 나왔습니다.");
			break; // 빠져나오는 문구
		case 2 :
			System.out.println("2번이 나왔습니다.");
			;
		case 3 :
			System.out.println("3번이 나왔습니다.");
			break;
		case 4 :
			System.out.println("4번이 나왔습니다.");
			break;
		case 5 :
			System.out.println("5번이 나왔습니다.");
			break;}
		
		
	} // mail
}//Sample

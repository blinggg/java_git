//ArrayList 사용(컬렉션) >> 추가할 때마다 메모리 사용함.
	ArrayList<Report> array=new ArrayList<Report>();
	
	Report r=new Report();
		r.setSno("01");
		r.setSname("홍길동");
		r.setKor(90);
		r.setEng(85);
		r.setMat(95);
		array.add(r);		
		
		r=new Report();
		r.setSno("02");
		r.setSname("이몽룡");
		r.setKor(85);
		r.setEng(50);
		r.setMat(60);
		array.add(r);	
		
		for(int i=0; i<array.size(); i++) {
			r=array.get(i);
			r.printList();
		}
		
	}

	}



package ex03;

import java.util.Scanner;

public class Sample {

	public static void main(String[] args) {
		
		//반복명령
		boolean run=true;
		while(run) {
				
		System.out.println("[실행결과]");
		
		Scanner s=new Scanner(System.in);
		System.out.println("-----------------");
		System.out.println("1.증속 | 2.감속 | 3. 중지");
		System.out.println("-----------------");
		System.out.print("선택:");
		int menu=s.nextInt();
		
		switch(menu) {
		case 1:
			System.out.println("현재속도="+menu);
			break;
		case 2:
			System.out.println("현재속도"+(menu-1));
			break;
		case 3:
			System.out.println("프로그램 종료");
			run=false;
		
			}
		}
		
	}//MAIN
}//SAMPLE


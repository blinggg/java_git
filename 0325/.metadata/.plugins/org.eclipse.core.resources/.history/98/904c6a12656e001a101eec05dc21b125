package ex05;

public class Sample {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String[] name={"심청이", "홍길동","강감찬"};
		int[] kor= {85,95,70};
		int[] eng= {90,87,70};
		int[] mat= {90,95,60};
		int[] tot= new int[3]; // 총합계를 구할 공간 3
		double[] avg= new double[3]; // 총평균을 구할 공간3
		int sumkor=0;
		int sumeng=0;
		int summat=0;
		int sumtot=0;
		double sumavg=0;
		
		
		System.out.println("이름\t국어\t영어\t수학\t총점\t평균");
		for(int i=0; i<=2;i++) {
			tot[i]=kor[i]+eng[i]+mat[i];
			avg[i]=tot[i]/3.;
		System.out.println
		(name[i]+"\t"+kor[i]+"\t"+eng[i]+"\t"+mat[i]+"\t"+tot[i]+"\t"+avg[i]);
			sumkor=sumkor+kor[i];
			sumeng=sumeng+eng[i];
			summat=summat+mat[i];
			sumtot=sumtot+tot[i];
			sumavg=sumavg+avg[i];
		}
			System.out.println("==================================================");
			System.out.println
			("반평균\t"+sumkor/3+"\t"+sumeng+"\t"+summat+"\t"+sumtot+"\t"+sumavg+"\t");
			
		

		
	}
	}


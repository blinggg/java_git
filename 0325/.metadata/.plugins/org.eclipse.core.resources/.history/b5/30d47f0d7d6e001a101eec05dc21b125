package practice;

import java.util.Scanner;

public class Sample {

	public static void main(String[] args) {
		pra();
		
		// switch문 연습하기
		boolean fun=true;
		while(fun) {
		System.out.println("값을 입력하세요.");
		
		Scanner s=new Scanner(System.in);
		int num=s.nextInt();
		
		switch(num) {
		case 1 :
			System.out.println("1번이나왔습니다");
			break;
		case 2:
			System.out.println("2번이나왔습니다.");
			break;
		case 3:
			System.out.println("3번이 나왔습니다");
			break;
		case 4:
			System.out.println("4번이 나왔습니다");
			break;
		default :
			fun=false;
			System.out.println("다른 값을 입력하세요.");
			break;			
					}
			}
	}//main
	// 연습하기2 =======================================
	// switch문사용, 직급을 입력받을 변수.
	public static void pra() {
		boolean run=true;
		while(run) {
		
		System.out.println("당신의 직급을 입력하세요.");
		Scanner s=new Scanner(System.in);
		
		String level=s.next();
		
		switch(level) {
		case "부장" :
			System.out.println("응 만년 부장~");
			break;
		case "과장" :
			System.out.println("응 만년 과장~");
			break;
		case "대리" :
			System.out.println("이상희대리!!!!!!!!!!");
			break;
		case "사원" :
			System.out.println("으휴 월급 아까워");
			break;
		default : 
			System.out.println("나니?");
			run=false;
			break;
			}//switch
		
		} // while
	}//pr1
			
}// sample
